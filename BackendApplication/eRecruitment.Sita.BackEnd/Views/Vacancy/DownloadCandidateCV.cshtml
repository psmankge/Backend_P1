
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Download Candidate Cu Division
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-wrench"></i> Human Resource</a></li>
            <li><a href="~/Admin/DivisionList">Division</a></li>
            <li class="active">Add Division</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Add Division</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" disabled data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">

                @using (Html.BeginForm("DownloadCandidateCVitae", "Vacancy", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @*@Html.AntiForgeryToken()*@
                    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label>Division Name:<span class="required" style="color:red;"> * </span></label>
                                    <input type="text" name="ProfileID" id="ProfileID" class="form-control" />
                                </div>
                            </div>
                            <div class="clearfix"></div><br />
                            <div class="col-md-12 pull-right">
                                <input type="submit" class="btn btn-success" value="Download CV" /> |
                            </div>
                        </div>
                    </div>

                }
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                &nbsp;
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script src="~/Scripts/DropDownListValues.js"></script>