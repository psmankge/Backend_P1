  <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Job Specific Question List
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-wrench"></i>Master List</a></li>
            <li><a href="~/Vacancy/JobSpecQuestionList">Job Specific Question</a></li>
            <li class="active">Job Specific Question List</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->

        @{ if (@TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible" id="MyWorkflow">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-check"></i> Notification!</h4>
                    <p> @TempData["Message"] </p>

                </div>
            }
        }

                <div class="box-body">
                    <div class="box">
                        <div class="box-header with-border">
                            @*<h3 class="box-title">Organisation</h3>*@
                            <div class="pull-left">
                                <a href="@Url.Action("AddJobSpecQuestion", "Vacancy")" class="btn btn-primary btn-sm">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    Add New Job Specific Question
                                </a>
                                |
                                @*<a href="@Url.Action("EditVacancy", "Vacancy", Session["sessVacancyID"])" onclick="return confirm('Are you sure you want to return to Editing this Vacancy?')" type="button" class="btn btn-warning">
                                    Return to Edit Vacancy
                                </a>
                                |*@
                                <a href="@Url.Action("VacancyList", "Vacancy")" onclick="return confirm('Are you sure you want to cancel?')" type="button" class="btn btn-danger">
                                    Return to Vacancy List
                                </a>
                            </div>
                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove" disabled data-toggle="tooltip" title="Remove">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <div class="box-body">
                            <div class="box">
                                @*<div class="box-header">
                                    <h3 class="box-title">Vacancies List</h3>
                                </div>*@
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Question Description</th>
                                                <th>Edit</th>
                                                <th>De-Activate</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @if (@ViewBag.JobSpecQuestionList != null)
                                            {
                                                foreach (var item in ViewBag.JobSpecQuestionList)
                                                {
                                                    <tr>
                                                        <td>@item.JobSpecificeQuestionDesc</td>
                                                        <td>
                                                            <a href="@Url.Action("EditJobSpecQuestion", "Vacancy", new { id = @item.JobSpecificeQuestionID})"><span class="fa fa-pencil" style="color:blue"></span> Edit</a>
                                                        </td>
                                                        <td>
                                                            <a href="@Url.Action("DeleteJobSpecQuestion", "Vacancy", new { id = @item.JobSpecificeQuestionID})" onclick="return confirm('Are you sure you want to delete this record?')"><span class="fa fa-trash danger" style="color:red"></span> De-Activate</a>
                                                        </td>
                                                    </tr>


                                                }
                                            }


                                        </tbody>

                                    </table>
                                </div>
                                <!-- /.box-body -->
                            </div>
                        </div>

                        <!-- /.box-body -->
                        <div class="box-footer">
                            @*Footer*@
                        </div>
                        <!-- /.box-footer-->
                    </div>
                </div>

            </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
