                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Work History</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Job Title</th>
                                    <th>Duties</th>
                                    <th>Department</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Reason For Leaving</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (@ViewBag.CandidateWorkHistoryList != null)
                                {


                                    foreach (var item in ViewBag.CandidateWorkHistoryList)
                                    {
                                        string text = item.positionHeld;

                                        //string positionHeld = text.Replace("\u0095", ".").Replace("\u0092", "'").Replace("\u0096", "-").Replace("?", ".").Trim();
                                        <tr>
                                            <td>@item.companyName</td>
                                            <td>@item.jobTitle</td>
                                            <td style="white-space: pre-line;">@item.positionHeld</td>
                                            @*<td style="white-space: pre-line;">@item.positionHeld</td>*@
                                            <td>@item.department</td>
                                            <td>@item.startDate</td>
                                            @if (@item.endDate == "0001/01/01" || @item.endDate == "0001-01-01" || @item.endDate == "1/1/0001" || @item.endDate == "01/01/0001")
                                            {
