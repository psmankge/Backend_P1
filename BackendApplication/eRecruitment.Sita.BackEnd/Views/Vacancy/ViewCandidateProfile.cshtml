                                    <div class="col-sm-10">
                                        @Html.EditorFor(i => item.RegistrationDate, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @disabled = "disabled", @id = "RegistrationDate", @class = "form-control", @type = "date", placeholder = "RegistrationDate", tabindex = 7, value = @item.RegistrationDate } })
                                    </div>
                                </div>
                                <div class="form-group" id="RegistrationNumber">
                                    <label for="inputRegistrationNumber" class="col-sm-2 control-label">Registration Number</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(i => item.RegistrationNumber, null, new
