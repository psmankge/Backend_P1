                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Department:<span class="required" style="color:red;"> * </span></label>
                                            @Html.Hidden("myApprover", Url.Action("GetApproverByDepartmentList"))
                                            @Html.DropDownListFor(Model => @item.DepartmentID, new SelectList(ViewBag.SitaDepartment, "DepartmentID", "DepartmentName", @item.DepartmentID), "--Select Department --", new { id = "DepartmentID", @class = "form-control", required = "Required", tabindex = 1, onChange = "GetApproverForEdit()" })
