                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <label>Preferred Race:<span class="required" style="color:red;"> * </span></label>
                                                @Html.DropDownListFor(Model => @item.RaceID, new SelectList(ViewBag.Race, "RaceID", "RaceName", @item.RaceID), "--Select Race--", new { @class = "form-control", required = "Required", tabindex = 9 })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <label>Employment Type:<span class="required" style="color:red;"> * </span></label>
                                                @Html.DropDownListFor(Model => @item.EmploymentTypeID, new SelectList(ViewBag.EmploymentType, "EmploymentTypeID", "EmploymentType", @item.EmploymentTypeID), "--Select Employment Type--", new { @class = "form-control", onchange = "CheckEmployment()", id = "EmploymentTypeID", required = "Required", tabindex = 9 })
                                            </div>
                                        </div>
                                    </div>

