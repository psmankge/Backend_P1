                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Division:<span class="required" style="color:red;"> * </span></label>
                                            @Html.Hidden("myDepartment", Url.Action("GetDepartmentList"))
