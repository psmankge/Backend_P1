                                            @*@Html.TextAreaFor(Model => @item.VacancyPurpose, new { @id = "VacancyPurpose", @class = "form-control", @rows = "3", placeholder = "Purpose of the Job", disabled = "disabled", tabindex = 15 })*@
                                            @Html.TextAreaFor(Model => @item.VacancyPurpose, new { @id = "VacancyPurpose", @class = "form-control", @rows = "3", placeholder = "Purpose of the Job", tabindex = 15 })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Key Responsibilities:</label>
                                            @Html.TextAreaFor(Model => @item.Responsibility, new { @id = "Responsibility", @class = "form-control", @rows = "3", placeholder = "Responsibilities of the Job", tabindex = 16 })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Qualifications and Experience:</label>
                                            @Html.TextAreaFor(Model => @item.QualificationAndExperience, new { @id = "QualificationAndExperience", @class = "form-control", @rows = "3", placeholder = "Qualifications and Experience required for the Job", tabindex = 17 })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Knowledge:</label>
                                            @Html.TextAreaFor(Model => @item.Knowledge, new { @id = "Knowledge", @class = "form-control", @rows = "3", placeholder = "Knowledge", tabindex = 17 })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Technical Competencies:</label>
                                            @Html.TextAreaFor(Model => @item.TechComps, new { @id = "TechComps", @class = "form-control", @rows = "3", placeholder = "Technical Competency Descriptions", tabindex = 17 })
                                        </div>
                                    </div>

                                    @if (@item.JobLevelID >= 17)
                                    {
                                        <div class="form-group" id="Leadership">
                                            <div class="col-md-12">
                                                <label>Leadership Competencies:</label>
                                                @Html.TextAreaFor(Model => @item.LeadComps, new { @id = "LeadComps", @class = "form-control", @rows = "3", placeholder = "Leadership Competency Descriptions", tabindex = 17 })
                                            </div>
                                        </div>
                                    }

                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Interpersonal / Behavioural Competencies:</label>
                                            @Html.TextAreaFor(Model => @item.BehaveComps, new { @id = "BehaveComps", @class = "form-control", @rows = "3", placeholder = "Behavioural Competency Descriptions", tabindex = 17 })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-12">
