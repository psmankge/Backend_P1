@model IEnumerable<eRecruitment.BusinessDomain.DAL.Entities.AppModels.SkillModel>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Manage Skill
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-wrench"></i>Master List</a></li>
            <li><a href="~/Admin/SkillList">Skill</a></li>
            <li class="active">Edit Skill</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Edit Skill</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" disabled data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                @foreach (var item in Model)
                {
                    using (Html.BeginForm("EditSkill", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>Skill Category<span class="required" style="color:red;"> * </span></label>
                                        @Html.DropDownListFor(Model => @item.CategoryID, new SelectList(ViewBag.SkillsCategoryList, "CategoryID", "Description", @item.CategoryID), "--Select Skill Category --", new { @class = "form-control", required = "Required", tabindex = 1 })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>Skill Description:<span class="required" style="color:red;"> * </span></label>
                                        @Html.TextBoxFor(Model => @item.skillName, new { @class = "form-control", required = "Required", placeholder = "Skill Name", tabindex = 2 })
                                    </div>
                                </div>
                                <div class="clearfix"></div><br />
                                <div class="col-md-12 pull-right">
                                    <input type="submit" class="btn btn-success" value="Save" /> |
                                    <a href="@Url.Action("SkillList", "Admin")" onclick="return confirm('Are you sure you want to cancel?')" type="button" class="btn btn-danger">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </div>

                    }
                }
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                &nbsp;
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->