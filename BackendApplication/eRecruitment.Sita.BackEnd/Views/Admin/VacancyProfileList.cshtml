  <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Job Profile List
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-wrench"></i> Administration</a></li>
            <li><a href="~/Admin/VacancyProfileList">Job Profile</a></li>
            <li class="active">Job Profile List</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box-body">
            <div class="box">
                <div class="box-header with-border">
                    <div class="pull-left">
                        <a href="@Url.Action("AddVacancyProfile", "Admin")" class="btn btn-primary btn-sm">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            Create Job Profile
                        </a>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove" disabled data-toggle="tooltip" title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                @{ if (@TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" id="MyWorkflow">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-check"></i> Notification!</h4>
                            <p> @TempData["Message"] </p>

                        </div>
                    }
                }

                @{ if (@TempData["message1"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" id="MyWorkflow">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-remove"></i> Notification!</h4>
                            <p> @TempData["message1"] </p>

                        </div>
                    }
                }
                <div class="box-body">
                    <div class="box">
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Organisation Name</th>
                                        <th>Job Title </th>
                                        @*<th>Skill Category</th>*@
                                        <th>Purpose of The Job</th>
                                        <th>Edit</th>
                                        <th>De-Activate</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (@ViewBag.VacancyProfile != null)
                                    {
                                        foreach (var item in ViewBag.VacancyProfile)
                                        {
                                            <tr>
                                                <td>@item.OrganisationName</td>
                                                <td>@item.JobTitle</td>
                                                @*<td>@item.SkillCategory</td>*@
                                                <td>@item.VacancyPurpose</td>
                                                <td>
                                                    <a href="@Url.Action("EditVacancyProfile", "Admin", new { id = @item.JobProfileID})"><span class="fa fa-pencil" style="color:blue"></span> Edit</a>
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("DeleteJobProfile", "Admin", new { JobProfileID = @item.JobProfileID})" onclick="return confirm('Are you sure you want to de-activate selected entry?')"><span class="fa fa-trash danger" style="color:red"></span> De-Activate</a>
                                                </td>
                                            </tr>


                                        }
                                    }


                                </tbody>

                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    @*Footer*@
                </div>
                <!-- /.box-footer-->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script>
    $(document).ready(function () {
        $('#example1').DataTable({
            "order": [[1, "asc"]]
        });
    });
</script>
