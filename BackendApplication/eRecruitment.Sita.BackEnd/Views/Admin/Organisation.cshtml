  <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Organisation List
            @*<small>it all starts here</small>*@
            <small>&nbsp;</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-wrench"></i> Administration</a></li>
            <li><a href="#">Organisation</a></li>
            <li class="active">Organisation List</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                @*<h3 class="box-title">Title</h3>*@
                <div class="pull-left">
                    <a href="@Url.Action("AddOrganisation", "Admin")" class="btn btn-primary btn-sm">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        Add New Organisation
                    </a>
                </div>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" disabled data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            @{ if (@TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" id="MyWorkflow">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-check"></i> Notification!</h4>
                        <p> @TempData["Message"] </p>

                    </div>
                }
            }
            @{ if (@TempData["danger"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" id="MyWorkflow">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-remove"></i> Notification!</h4>
                        <p> @TempData["danger"] </p>

                    </div>
                }
            }
            <div class="box-body">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Organisation Name</th>
                                    <th>Short Name</th>
                                    <th>Attachments</th>
                                    <th>Edit</th>
                                    <th>Deactivate</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (@ViewBag.Organisation != null)
                                {
                                    foreach (var item in ViewBag.Organisation)
                                    {
                                        <tr>
                                            <td>@item.OrganisationName</td>
                                            <td>@item.OrganisationCode</td>
                                            <td>
                                                <a href="@Url.Action("DownLoadFile", "Admin", new { OrganisationID = @item.OrganisationID})">@item.FileName</a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("EditOrganisation", "Admin", new { id = @item.OrganisationID})"><span class="fa fa-pencil" style="color:blue"></span> Edit</a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("DeleteOrganisation", "Admin", new { id = @item.OrganisationID})" onclick="return confirm('Are you sure you want to de-activate selected entry?')"><span class="fa fa-trash danger" style="color:red"></span> De-Activate</a>
                                            </td>

                                        </tr>


                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                &nbsp;
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
