  <!-- Content Wrapper. Contains page content -->
@model IEnumerable<eRecruitment.BusinessDomain.DAL.Entities.AppModels.OrganisationModel>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edit Organisation
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-wrench"></i> Administration</a></li>
            <li><a href="~/Admin/Organisation">Organisation</a></li>
            <li class="active">Edit Organisation</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Title</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" disabled data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                @foreach (var item in Model)
                {
                    using (Html.BeginForm("EditOrganisation", "Admin", new { id = @item.OrganisationID }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>Organisation Name:<span class="required" style="color:red;"> *</span></label>
                                        @Html.TextBoxFor(m => @item.OrganisationName, new { @class = "form-control", placeholder = "Organisation Name", required = "Required", tabindex = 2 })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>Organisation Short Name:</label>
                                        @Html.TextBoxFor(m => @item.OrganisationCode, new { @class = "form-control", placeholder = "Organisation Short Name", tabindex = 1 })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label>Attach Organisation Logo:</label>
                                        <input type="file" class="form-control-file" accept="image/gif, image/jpeg" name="postedFile" id="postedFile" />
                                    </div>
                                </div>
                                <div class="clearfix"></div><br />
                                <div class="col-md-12 pull-right">
  
                                    <input type="submit" class="btn btn-success" value="Submit" /> |
                                    <a href="~/Admin/Organisation" class="btn btn-danger"><span> Cancel</span></a>
                                </div>
                            </div>
                        </div>

                    }
                }
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                &nbsp;
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->