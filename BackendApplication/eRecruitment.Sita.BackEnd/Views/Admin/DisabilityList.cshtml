  <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Disability List

        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-wrench"></i>Master List</a></li>
            <li><a href="~/Admin/DisabilityList">Disability</a></li>
            <li class="active">Disability List</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box-body">
            <div class="box">
                <div class="box-header with-border">
                    @*<h3 class="box-title">Organisation</h3>*@
                    <div class="pull-left">
                        <a href="@Url.Action("AddDisability", "Admin")" class="btn btn-primary btn-sm">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            Add New Disability
                        </a>
                    </div>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove" disabled data-toggle="tooltip" title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                @{ if (@TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" id="MyWorkflow">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-check"></i> Notification!</h4>
                            <p> @TempData["Message"] </p>

                        </div>
                    }
                }
                <div class="box-body">
                    <div class="box">
                        @*<div class="box-header">
                    <h3 class="box-title">Vacancies List</h3>
                </div>*@
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Disability Description</th>
                                        <th>Edit</th>
                                        <th>De-Activate</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (@ViewBag.Disability != null)
                                    {
                                        foreach (var item in ViewBag.Disability)
                                        {
                                            <tr>
                                                <td>@item.Disability</td>
                                                <td>
                                                    <a href="@Url.Action("EditDisability", "Admin", new { id = @item.DisabilityID})"><span class="fa fa-pencil" style="color:blue"></span> Edit</a>
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("DeleteDisability", "Admin", new { id = @item.DisabilityID})" onclick="return confirm('Are you sure you want to de-activate selected entry?')"><span class="fa fa-trash danger" style="color:red"></span> De-Activate</a>
                                                </td>
                                            </tr>


                                        }
                                    }


                                </tbody>

                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>

                @if (TempData["message"] != null)
                {
                    <div class="modal modal-success fade" id="mask" data-toggle="modal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title">Notification</h4>
                                </div>
                                <div class="modal-body">

                                    <p>@Html.Raw(Json.Encode(TempData["message"]).Replace(@"""", ""))</p>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" href="@Url.Action("DisabilityList", "Admin")" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                    </div>
                }


                <!-- /.box-body -->
                <div class="box-footer">
                    @*Footer*@
                </div>
                <!-- /.box-footer-->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $(document).ready(function () {
        $('#mask').fadeIn(500);
        $('#mask').fadeTo("slow", 0.9);
        $('.window .close').click(function (e) {
            e.preventDefault();
            $('#mask').hide();
            $('.window').hide();
        });
        $('#mask').click(function () {
            $(this).hide();
            $('.window').hide();
        });

    });
</script>