  <!-- Content Wrapper. Contains page content -->
@model eRecruitment.BusinessDomain.DAL.Entities.AppModels.OrganisationModel
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Manage Organisation
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-wrench"></i> Administration</a></li>
            <li><a href="~/Admin/Index">Organisation</a></li>
            <li class="active">Add Organisation</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Add Organisation</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" disabled data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                @using (Html.BeginForm("AddOrganisation", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label>Organisation Name:<span class="required" style="color:red;"> * </span></label>
                                    @Html.TextBoxFor(m => m.OrganisationName, new { @class = "form-control", placeholder = "Organisation Name", required = "Required", tabindex = 2 })
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @*@Html.LabelFor(m => m.ReferenceNo, new { @class = "col-md-2 control-label" })*@
                                <div class="col-md-12">
                                    <label>Organisation Short Name:</label>
                                    @Html.TextBoxFor(m => m.OrganisationCode, new { @class = "form-control", placeholder = "Organisation Short Name", tabindex = 1 })
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <label>Attach Organisation Logo:<span class="required" style="color:red;"> * </span></label>
                                    <input type="file" required="required" class="form-control-file" accept="image/gif, image/jpeg" name="postedFile" id="postedFile" />
                                </div>
                            </div>
                            <div class="clearfix"></div><br />
                            <div class="col-md-12 pull-right">
                                <input type="submit" class="btn btn-success" value="Save" /> |
                                <a href="@Url.Action("Organisation", "Admin")" onclick="return confirm('Are you sure you want to cancel?')" type="button" class="btn btn-danger">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </div>

                }
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                &nbsp;
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->